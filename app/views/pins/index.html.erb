<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">

    <%= link_to image_tag(pin.image.url(:medium)), pin %>

    <div class="panel-body">
      <%= pin.description %><br/>

      <%= pin.user.email if pin.user %>
      <% if pin.user == current_user %>

        <div class="actions">

        <%= link_to raw('<button><span class="glyphicon glyphicon-pencil"></span></button>'), edit_pin_path(pin) %>
        <%= link_to raw('<button><span class="glyphicon glyphicon-trash"></span></button>'), pin, method: :delete, data: { confirm: 'Are you sure?' } %>

      </div>

      <% end %>

    </div>
    </div>
    <% end %>
    </div>
